extends layout 

block content 
    h2.page-header Login
    p Please login below
    form(action="/users/login", method="post")
        .form-group 
            label Username 
            input.form-control(type="text", name="username", placeholder="Enter Username") 
        .form-group 
            label Password 
            input.form-control(type="password", name="password", placeholder="Enter Password") 
        input.btn.btn-primary(type="submit", value="Login" name="submit")